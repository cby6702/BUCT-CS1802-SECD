<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs1802.museum.mapper.UserMapper">
    <update id="updateCity">
        update users set city = #{city} where uid = #{uid}
    </update>
    <select id="getUser" resultType="com.cs1802.museum.bean.User">
        select * from users where uid = #{uid}
    </select>

    <select id="getValidstate" resultType="java.lang.Integer">
        SELECT validstate FROM users where uid = #{uid}
    </select>

    <select id="getSignUser" resultType="com.cs1802.museum.bean.User">
        select * from users where name=#{name}
    </select>
    <insert id="addUser">
        insert into users(name,password,email,mobile) values (#{name},#{password},#{email},#{mobile});
    </insert>
    <update id="updateUser">
        update users set name=#{name},gender=#{gender},birthday=#{birthday},email=#{email},mobile=#{mobile},avatarUrl=#{avatarUrl}
        where uid=#{uid}
    </update>
    <select id="MyComments" resultType="com.cs1802.museum.bean.Comments">
        select * from comments where uid=#{uid}
    </select>
    <delete id="deleteComments">
        delete from comments where aid=#{aid}
    </delete>
    <delete id="deleteAllComs">
        delete from comments where uid=#{uid}
    </delete>
    <select id="MyTexts" resultType="com.cs1802.museum.bean.Texts">
        select * from text where uid=#{uid}
    </select>
    <delete id="deleteText">
        delete from text where tid=#{tid}
    </delete>
    <delete id="deleteAllTexts">
        delete from text where uid=#{uid}
    </delete>
</mapper>